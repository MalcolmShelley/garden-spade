{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "dist",
        "declaration": true,
        "target": "es6",
        "module": "nodenext",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "nodenext",
        "strict": false,
        "importHelpers": true,
        "strictFunctionTypes": false,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["./src/**/*"],
}